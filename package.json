{
  "name": "simple-twitter-api",
  "version": "1.0.0",
  "description": "Simplified Twitter API for basic tweet fetching",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop twitter-api",
    "pm2:restart": "pm2 restart twitter-api",
    "pm2:reload": "pm2 reload twitter-api",
    "pm2:delete": "pm2 delete twitter-api",
    "pm2:logs": "pm2 logs twitter-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "rettiwt-api": "^6.0.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0"
  },
  "keywords": [
    "twitter",
    "api",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "MIT"
}
